<script>
// Shopping cart code based on Patrick McKenzie (http://www.bingocardcreator.com/articles/developing-shopping-cart.htm)
var pjm_cartOpenedAtLeastOnce = false;
var cur_ejunkie_custom = '';

function trackPageViewCustom(page)
{
  ejGATracker._trackPageview("/c++book/e-junkie/" + page + "?custom=" + cur_ejunkie_custom );
}

function pjm_ReplaceQueryParam(url, queryParam, newValue) {
  var queryParamRegex = queryParam;
  queryParamRegex = queryParamRegex.replace(/[\[]/,"\\\\[").replace(/[\]]/,"\\\\]");
  var regexS = "[\\?&]" + queryParamRegex + "=([^&#]*)";
  var regex = new RegExp(regexS);
  var results = regex.exec(url);
  if (results == null) {
    if (url.indexOf("?") >= 0) {
      return url + "&" + queryParam + "=" + escape(newValue);
    } else {
      return url + "?" + queryParam + "=" + escape(newValue);
    }
  } else {
    return url.replace(queryParam + "=" + results[1], queryParam + "=" + escape(newValue));
  }
}

function fixLink(link_id, ejunkie_custom) {
  var link = $( "#" + link_id );
  var link_url = link.prop( "href" );
  link_url = pjm_ReplaceQueryParam(link_url, "custom", ejunkie_custom);
  link.prop( "href", link_url );
}

function pjm_openCart(ejunkie_custom) {
  var params = new Object();
  params.width = 700;
  params.height = 375;
  cur_ejunkie_custom = ejunkie_custom + '';
  var sample_cookie = readCookie( "gotsample" );
  if ( sample_cookie )
  {
      cur_ejunkie_custom += "-gs";
  }

  fixLink( "paypalLink", cur_ejunkie_custom );

  fixLink( "twoCheckoutLink", cur_ejunkie_custom );
  iBox.show($('#pjm_cart').html(), '', params);

  if (!pjm_cartOpenedAtLeastOnce) {
    trackPageViewCustom('cart_opened');
    pjm_cartOpenedAtLeastOnce = true;
  }
  else {
    trackPageViewCustom('cart_reopened');
  }
  return false;
}
</script>
