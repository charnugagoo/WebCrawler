<input type="button" class="button" value="Show Click for Discussion" style="width:auto;font-size:10px;margin:0px;padding:0px;" onClick="if (this.parentNode.parentNode.getElementsByTagName('div')[1].getElementsByTagName('div')[0].style.display != '') { this.parentNode.parentNode.getElementsByTagName('div')[1].getElementsByTagName('div')[0].style.display = ''; this.innerText = ''; this.value = 'Hide Click for Discussion'; for (i=0;i<this.parentNode.parentNode.getElementsByTagName('img').length;i++) { NcodeImageResizer.createOn(this.parentNode.parentNode.getElementsByTagName('img')[i]); } } else { this.parentNode.parentNode.getElementsByTagName('div')[1].getElementsByTagName('div')[0].style.display = 'none'; this.innerText = ''; this.value = 'Show Click for Discussion';}">
